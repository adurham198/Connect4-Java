<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ff00"
    tools:context=".Accinfoactivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/w_txt_lname"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="34dp"
        android:text="Textview"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_fname" />

    <TextView
        android:id="@+id/w_txt_fname"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/w_btn_update" />

    <TextView
        android:id="@+id/w_txt_email"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="34dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_lname"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/w_txt_uname"
        android:layout_width="145dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="34dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_email"
        tools:textSize="18sp" />

    <Button
        android:id="@+id/w_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="120dp"
        android:layout_marginLeft="121dp"
        android:layout_marginRight="120dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="37dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Delete Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_delmessage" />

    <Button
        android:id="@+id/w_btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="49dp"
        android:layout_marginLeft="143dp"
        android:layout_marginRight="49dp"
        android:layout_marginStart="143dp"
        android:layout_marginTop="33dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/w_btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/w_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/w_txt_delmessage"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="30dp"
        android:text='If you wish to permanently delete your account, press and hold the "Delete Account button"'
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_uname"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="31dp"
        android:text="First name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_btn_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="26dp"
        android:text="Last name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="26dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="26dp"
        android:text="Username:"
        app:layout_constraintBottom_toTopOf="@+id/w_txt_delmessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</android.support.constraint.ConstraintLayout>